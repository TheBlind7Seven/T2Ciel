#include <iostream>
using namespace std;

// Fonction template
template <typename T>
T Maximum(T a, T b) {
	return (a > b) ? a : b;
}

int main() {

	float i1, i2;

	
	cout << "Test d'une fonction de comparaison \"template\"" << endl;


	cout << "Entrez la valeur du premier entier : ";
	cin >> i1;
	cout << "Entrez la valeur du second entier : ";
	cin >> i2;

	
	float resultat = Maximum(i1, i2);

	
	cout << "Le maximum entre " << i1 << " et " << i2
		<< " est : " << resultat << endl;

	return 0; 
}
